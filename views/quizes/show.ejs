<form method="get" action="/quizes/<%= quiz.id %>/answer">
    <p>Tema: <%= quiz.tema %></p>
    <p>Pregunta: <%= quiz.pregunta %></p>
    <input type="text" name="respuesta" placeholder="Responda aqui" />
    <input type="submit" value="Enviar" />
</form>
<p><a href="/quizes/<%= quiz.id %>/comments/new"><button>Nuevo comentario</button></a></p>

<p><strong>Comentarios:</strong></p>
<%for(index in quiz.Comments){%>
    <% if(quiz.Comments[index].publicado || (locals.session && locals.session.user)) { %>
        <p>- <%=quiz.Comments[index].texto%>
        <% if((locals.session && locals.session.user) && !quiz.Comments[index].publicado) {%>
            <a href="/quizes/<%= quiz.id %>/comments/<%= quiz.Comments[index].id %>/publish">
                <button>Publicar</button>
            </a>
        <% } %>
        </p>
    <% } %>

<%}%>